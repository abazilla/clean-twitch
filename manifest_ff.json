{
	"name": "Hide Twitch Extension 2",
	"description": "Hide unwanted sections of twitch",
	"version": "0.1.0",
	"manifest_version": 3,
	"permissions": [
		"tabs",
		"scripting",
		"storage",
		"declarativeNetRequest",
		"declarativeNetRequestFeedback",
		"webRequest"
	],
	"host_permissions": ["https://*.twitch.tv/*"],
	"content_scripts": [
		{
			"matches": ["https://*.twitch.tv/*"],
			"js": ["content/index.ts"]
		},
		{
			"all_frames": true,
			"run_at": "document_start",
			// "contentScriptWhen": "start", // ff friendly
			"matches": ["https://*.twitch.tv/*"],
			"js": ["content/ws-setup.ts"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["content/ws-setup.ts"],
			"matches": ["https://*.twitch.tv/*"]
		}
	],
	"background": { "service_worker": "background/index.ts" },
	"action": { "default_popup": "pages/popup/index.html" }
}
