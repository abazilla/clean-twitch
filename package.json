{
	"name": "clean-twitch",
	"description": "Twitch without the clutter.",
	"private": true,
	"version": "0.2.0",
	"type": "module",
	"scripts": {
		"dev:chrome": "wxt",
		"dev:firefox": "wxt -b firefox",
		"dev:edge": "wxt -b edge",
		"build:chrome": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"build:edge": "wxt build -b edge",
		"zip:chrome": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"zip:edge": "wxt zip -b edge",
		"compile": "tsc --noEmit",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"submit": "./submit.sh",
		"submit:dry-run": "./submit.sh --dry-run",
		"postinstall": "wxt prepare",
		"prepare": "husky",
		"benchmark": "node scripts/benchmark.mjs",
		"benchmark:compare": "node scripts/benchmark.mjs --compare"
	},
	"dependencies": {
		"react": "^19.2.4",
		"react-dom": "^19.2.4"
	},
	"pnpm": {
		"overrides": {
			"@wxt-dev/browser": "^0.1.4",
			"@wxt-dev/storage": "1.2.0"
		},
		"onlyBuiltDependencies": [
			"puppeteer",
			"esbuild",
			"@tailwindcss/oxide"
		]
	},
	"devDependencies": {
		"@stdlib/stats-wilcoxon": "^0.2.2",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/react": "^16.3.2",
		"@testing-library/react-hooks": "^8.0.1",
		"@types/react": "^19.2.13",
		"@types/react-dom": "^19.2.3",
		"@vitest/ui": "^3.2.4",
		"@wxt-dev/module-react": "^1.1.5",
		"husky": "^9.1.7",
		"jsdom": "^27.4.0",
		"prettier": "3.4.2",
		"prettier-plugin-organize-imports": "^4.3.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"puppeteer": "^24.37.1",
		"simple-statistics": "^7.8.8",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite-plugin-checker": "^0.11.0",
		"vitest": "^3.2.4",
		"wxt": "^0.20.13"
	}
}
