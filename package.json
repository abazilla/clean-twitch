{
	"name": "hide-twitch",
	"version": "1.0.0",
	"private": true,
	"description": "Hide annoying twitch stuff",
	"author": "aba",
	"source": "src/pages/popup/index.html",
	"scripts": {
		"start": "parcel watch chrome/manifest.json --host localhost",
		"start-firefox": "parcel watch firefox/manifest.json --host localhost",
		"build": "npm run build-chrome && npm run build-firefox",
		"build-chrome": "rm -rf dist/chrome && NODE_ENV=production parcel build src-chrome/manifest.json --dist-dir dist/chrome && mkdir -p releases && zip -r releases/hide-twitch-2-chrome-$(jq -r .version < package.json).zip dist/chrome",
		"build-firefox": "rm -rf dist/firefox && NODE_ENV=production parcel build src-firefox/manifest.json --dist-dir dist/firefox && mkdir -p releases && zip -r releases/hide-twitch-2-firefox-$(jq -r .version < package.json).zip dist/firefox",
		"test": "jest"
	},
	"dependencies": {
		"jquery": "^3.6.0",
		"preact": "^10.27.2"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.13.3",
		"@parcel/optimizer-terser": "^2.16.0",
		"@parcel/reporter-bundle-analyzer": "^2.16.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@types/chrome": "^0.0.193",
		"@types/firefox-webext-browser": "^82.0.0",
		"@types/jest": "^26.0.19",
		"@types/jquery": "^3.5.14",
		"@types/react": "19.0.8",
		"@types/react-dom": "19.0.3",
		"@types/webextension-polyfill": "^0.12.1",
		"@typescript-eslint/eslint-plugin": "^8.22.0",
		"@typescript-eslint/parser": "^8.22.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.19.0",
		"eslint-plugin-react": "^7.21.5",
		"jest": "^26.6.3",
		"jest-chrome": "^0.7.0",
		"parcel": "^2.16.0",
		"postcss": "^8.5.1",
		"prettier": "3.4.2",
		"prettier-plugin-organize-imports": "^4.1.0",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"process": "^0.11.10",
		"tailwindcss": "^3.4.17",
		"ts-jest": "^26.4.4",
		"tslib": "^2.0.3",
		"typescript": "^4.1.3",
		"webextension-polyfill": "^0.7.0",
		"webpack-bundle-analyzer": "^4.10.2"
	}
}
