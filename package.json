{
	"name": "hide-twitch-2",
	"version": "1.0.0",
	"private": true,
	"description": "Hide annoying twitch stuff",
	"author": "aba",
	"scripts": {
		"start": "concurrently \"rollup -c --environment BUILD:development -w\" \"npx @tailwindcss/cli -i ./src/pages/popup/index.css -o ./dist/pages/popup/index.css --watch\" ",
		"build": "rollup -c --environment BUILD:production && npx @tailwindcss/cli -i ./src/pages/popup/index.css -o ./dist/pages/popup/index.css --minify",
		"release": "npx @tailwindcss/cli -i ./src/pages/popup/index.css -o ./releases/index.css && cross-env NODE_ENV=production rollup -c",
		"test": "jest"
	},
	"dependencies": {
		"jquery": "^3.6.0",
		"react": "19.0.0",
		"react-dom": "19.0.0"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.4.1",
		"@rollup/plugin-alias": "^3.1.1",
		"@rollup/plugin-commonjs": "^17.0.0",
		"@rollup/plugin-node-resolve": "^11.0.1",
		"@rollup/plugin-replace": "^3.0.0",
		"@rollup/plugin-typescript": "^8.1.0",
		"@rollup/pluginutils": "^5.1.4",
		"@tailwindcss/cli": "^4.0.1",
		"@types/chrome": "^0.0.193",
		"@types/firefox-webext-browser": "^82.0.0",
		"@types/jest": "^26.0.19",
		"@types/jquery": "^3.5.14",
		"@types/react": "19.0.8",
		"@types/react-dom": "19.0.3",
		"@types/webextension-polyfill": "^0.12.1",
		"@typescript-eslint/eslint-plugin": "^8.22.0",
		"@typescript-eslint/parser": "^8.22.0",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.1.2",
		"cross-env": "^7.0.3",
		"eslint": "^9.19.0",
		"eslint-plugin-react": "^7.21.5",
		"jest": "^26.6.3",
		"jest-chrome": "^0.7.0",
		"prettier": "3.4.2",
		"rollup": "^2.56.3",
		"rollup-plugin-chrome-extension": "^3.6.12",
		"rollup-plugin-copy": "^3.5.0",
		"rollup-plugin-empty-dir": "^1.0.5",
		"rollup-plugin-zip": "^1.0.3",
		"tailwindcss": "^4.0.1",
		"ts-jest": "^26.4.4",
		"tslib": "^2.0.3",
		"typescript": "^4.1.3",
		"webextension-polyfill": "^0.7.0"
	}
