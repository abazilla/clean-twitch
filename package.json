{
	"name": "clean-twitch",
	"description": "Twitch without the clutter.",
	"private": true,
	"version": "0.1.6",
	"type": "module",
	"scripts": {
		"dev:chrome": "wxt",
		"dev:firefox": "wxt -b firefox",
		"dev:edge": "wxt -b edge",
		"build:chrome": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"build:edge": "wxt build -b edge",
		"zip:chrome": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"zip:edge": "wxt zip -b edge",
		"compile": "tsc --noEmit",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"submit": "./submit.sh",
		"submit:dry-run": "./submit.sh --dry-run",
		"postinstall": "wxt prepare",
		"prepare": "husky"
	},
	"dependencies": {
		"react": "^19.1.1",
		"react-dom": "^19.1.1"
	},
	"pnpm": {
		"overrides": {
			"@wxt-dev/browser": "^0.1.4",
			"@wxt-dev/storage": "1.2.0"
		}
	},
	"devDependencies": {
		"@tailwindcss/vite": "^4.1.4",
		"@testing-library/react": "^16.3.0",
		"@testing-library/react-hooks": "^8.0.1",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.9",
		"@vitest/ui": "^3.2.4",
		"@wxt-dev/module-react": "^1.1.3",
		"husky": "^9.1.7",
		"jsdom": "^27.0.0",
		"prettier": "3.4.2",
		"prettier-plugin-organize-imports": "^4.1.0",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwindcss": "^4.0.9",
		"typescript": "^5.9.2",
		"vite-plugin-checker": "^0.11.0",
		"vitest": "^3.2.4",
		"wxt": "^0.20.9"
	}
}
